<?xml version="1.0" encoding="UTF-8"?>
<git_protocol>

  <metadata>
    <description>Git workflow management protocol</description>
    <version>1.0</version>
  </metadata>
  
  <branch_management>
    <naming_convention>
      <source>spec folder name</source>
      <format>remove date prefix (YYYY-MM-DD-)</format>
      <example>
        <input>2025-03-15-password-reset</input>
        <output>password-reset</output>
      </example>
    </naming_convention>
    
    <branch_operations>
      <operation name="create_or_switch">
        <check>Branch exists?</check>
        <if_exists>git checkout [branch]</if_exists>
        <if_not_exists>git checkout -b [branch]</if_not_exists>
      </operation>
      
      <operation name="stash_if_needed">
        <check>Uncommitted changes?</check>
        <if_changes>git stash save "Auto-stash before branch switch"</if_changes>
      </operation>
    </branch_operations>
  </branch_management>
  
  <commit_workflow>
    <stage>git add -A</stage>
    <commit>git commit -m "[type]: [description]"</commit>
    <push>git push origin [branch]</push>
  </commit_workflow>
  
  <pr_creation>
    <title>feat: [task description]</title>
    <body>
      <section>## Summary</section>
      <section>## Changes</section>
      <section>## Testing</section>
    </body>
  </pr_creation>
  
  <subagent_invocation>
    <primary>@git-workflow, [operation]</primary>
    <fallback>@subagent, manage git [operation]</fallback>
    <direct>Bash tool with git commands</direct>
  </subagent_invocation>

</git_protocol>