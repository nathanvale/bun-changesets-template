{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "ESM Library",
  "extends": "./base.json",
  "compilerOptions": {
    /* Module System */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",

    /* Output Configuration */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",

    /* ESM Requirements */
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Performance */
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",

    /* Type Safety */
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": false,

    /* Node.js 20+ Compatibility */
    "lib": ["ES2022"],
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["dist", "dist-types", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
