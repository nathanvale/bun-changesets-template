{
  "name": "@bun-template/utils",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nathanvale/bun-changesets-template.git",
    "directory": "packages/utils"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist-types/index.d.ts",
      "import": "./dist/index.js"
    },
    "./number": {
      "types": "./dist-types/number-utils.d.ts",
      "import": "./dist/number-utils.js"
    },
    "./path": {
      "types": "./dist-types/path-utils.d.ts",
      "import": "./dist/path-utils.js"
    },
    "./test": {
      "types": "./dist-types/test-utils.d.ts",
      "import": "./dist/test-utils.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist-types/index.d.ts",
  "files": ["dist", "dist-types", "README.md"],
  "scripts": {
    "clean": "rm -rf dist dist-types .tsbuildinfo",
    "build": "pnpm run clean && pnpm run build:code && pnpm run build:types && echo 'âœ… @bun-template/utils built'",
    "build:code": "tsup src/index.ts src/number-utils.ts src/path-utils.ts src/test-utils.tsx --format esm --splitting --sourcemap --no-dts --external react --external react-dom --out-dir dist",
    "build:types": "tsc --declaration --emitDeclarationOnly --project ./tsconfig.json --outDir dist-types",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:ci": "vitest run --bail 1",
    "prepublishOnly": "pnpm run build && test -d dist && test -d dist-types",
    "lint": "NODE_NO_WARNINGS=1 eslint ."
  },
  "devDependencies": {
    "tsup": "^8.3.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}