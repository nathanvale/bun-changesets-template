{
  "name": "@bun-template/utils",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nathanvale/bun-changesets-template.git",
    "directory": "packages/utils"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist-types/index.d.ts",
      "import": "./dist/index.js"
    },
    "./number": {
      "types": "./dist-types/number-utils.d.ts",
      "import": "./dist/number-utils.js"
    },
    "./path": {
      "types": "./dist-types/path-utils.d.ts",
      "import": "./dist/path-utils.js"
    },
    "./test": {
      "types": "./dist-types/test-utils.d.ts",
      "import": "./dist/test-utils.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist-types/index.d.ts",
  "files": [
    "dist",
    "dist-types",
    "README.md"
  ],
  "scripts": {
    "build": "bun run clean && bun run build:code && bun run build:types && echo 'âœ… @bun-template/utils built'",
    "build:code": "bun build src/index.ts --outdir=dist --target=bun --format=esm --splitting --sourcemap --external react --external react-dom",
    "build:types": "tsc --declaration --emitDeclarationOnly --project ./tsconfig.json --outDir dist-types",
    "clean": "rm -rf dist dist-types .tsbuildinfo",
    "diag:test": "BUN_TEMPLATE_ESBUILD_DIAG=1 vitest run --reporter=dot",
    "prepublishOnly": "bun run build && test -d dist && test -d dist-types",
    "test": "vitest run",
    "test:dist": "bun run build && vitest run --dir dist",
    "typecheck": "tsc --noEmit"
  },
  "packageManager": "bun@1.1.38",
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
