{
  "name": "@template/utils",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nathanvale/bun-changesets-template.git",
    "directory": "packages/utils"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist-types/index.d.ts",
      "import": "./dist/index.js"
    },
    "./number": {
      "types": "./dist-types/number-utils.d.ts",
      "import": "./dist/number-utils.js"
    },
    "./path": {
      "types": "./dist-types/path-utils.d.ts",
      "import": "./dist/path-utils.js"
    },
    "./test": {
      "types": "./dist-types/test-utils.d.ts",
      "import": "./dist/test-utils.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist-types/index.d.ts",
  "files": ["dist", "dist-types", "README.md"],
  "scripts": {
    "build": "node ../../tooling/build/build-esm.js",
    "clean": "rm -rf dist dist-types .tsbuildinfo*",
    "lint": "NODE_NO_WARNINGS=1 eslint .",
    "lint:fix": "NODE_NO_WARNINGS=1 eslint . --fix",
    "prepublishOnly": "pnpm run build && test -d dist && test -d dist-types",
    "test": "vitest run",
    "test:ci": "vitest run --bail 1",
    "typecheck": "tsc --noEmit --project tsconfig.json"
  },
  "devDependencies": {
    "typescript": "^5.7.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
