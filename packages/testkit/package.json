{
  "name": "@template/testkit",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/nathanvale/bun-changesets-template.git",
    "directory": "packages/testkit"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./register": {
      "types": "./dist/register.d.ts",
      "import": "./dist/register.js"
    },
    "./msw": {
      "types": "./dist/msw/index.d.ts",
      "import": "./dist/msw/index.js"
    },
    "./containers": {
      "types": "./dist/containers/index.d.ts",
      "import": "./dist/containers/index.js"
    },
    "./convex": {
      "types": "./dist/convex/index.d.ts",
      "import": "./dist/convex/index.js"
    },
    "./env": {
      "types": "./dist/env/index.d.ts",
      "import": "./dist/env/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./fs": {
      "types": "./dist/fs/index.d.ts",
      "import": "./dist/fs/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist .tsbuildinfo",
    "dev": "tsup --watch",
    "lint": "eslint . --cache --cache-location ../../.eslintcache/testkit",
    "prepublishOnly": "pnpm run build && test -d dist",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@template/utils": "workspace:*"
  },
  "devDependencies": {
    "@testcontainers/mysql": "^11.6.0",
    "@testcontainers/postgresql": "^11.6.0",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "convex-test": "^0.0.38",
    "happy-dom": "^18.0.1",
    "msw": "^2.10.5",
    "mysql2": "^3.15.0",
    "pg": "^8.16.3",
    "testcontainers": "^10.17.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@vitest/ui": "^3.2.4",
    "vitest": "^3.2.4"
  }
}
