{
  "name": "@orchestr8/testkit",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nathanvale/bun-changesets-template.git",
    "directory": "packages/testkit"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "vitest": "./src/cli/index.ts",
      "development": "./src/cli/index.ts",
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js"
    },
    "./register": {
      "vitest": "./src/register.ts",
      "development": "./src/register.ts",
      "types": "./dist/register.d.ts",
      "import": "./dist/register.js"
    },
    "./msw": {
      "vitest": "./src/msw/index.ts",
      "development": "./src/msw/index.ts",
      "types": "./dist/msw/index.d.ts",
      "import": "./dist/msw/index.js"
    },
    "./msw/browser": {
      "types": "./dist/msw/browser.d.ts",
      "import": "./dist/msw/browser.js"
    },
    "./containers": {
      "vitest": "./src/containers/index.ts",
      "development": "./src/containers/index.ts",
      "types": "./dist/containers/index.d.ts",
      "import": "./dist/containers/index.js"
    },
    "./convex": {
      "vitest": "./src/convex/index.ts",
      "development": "./src/convex/index.ts",
      "types": "./dist/convex/index.d.ts",
      "import": "./dist/convex/index.js"
    },
    "./sqlite": {
      "vitest": "./src/sqlite/index.ts",
      "development": "./src/sqlite/index.ts",
      "types": "./dist/sqlite/index.d.ts",
      "import": "./dist/sqlite/index.js"
    },
    "./env": {
      "vitest": "./src/env/index.ts",
      "development": "./src/env/index.ts",
      "types": "./dist/env/index.d.ts",
      "import": "./dist/env/index.js"
    },
    "./utils": {
      "vitest": "./src/utils/index.ts",
      "development": "./src/utils/index.ts",
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./fs": {
      "vitest": "./src/fs/index.ts",
      "development": "./src/fs/index.ts",
      "types": "./dist/fs/index.d.ts",
      "import": "./dist/fs/index.js"
    },
    "./config": {
      "vitest": "./src/config/index.ts",
      "development": "./src/config/index.ts",
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js"
    },
    "./config/vitest": {
      "vitest": "./src/config/vitest.base.ts",
      "development": "./src/config/vitest.base.ts",
      "types": "./dist/config/vitest.base.d.ts",
      "import": "./dist/config/vitest.base.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "bin": {
    "cleanup-zombies": "dist/teardown/emergencyCleanup.js"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist .tsbuildinfo",
    "dev": "tsup --watch",
    "lint": "eslint . --cache --cache-location ../../.eslintcache/testkit",
    "prepublishOnly": "pnpm run build && test -d dist",
    "test": "vitest run -c ./vitest.config.ts",
    "test:watch": "vitest watch -c ./vitest.config.ts",
    "test:ui": "vitest --ui -c ./vitest.config.ts",
    "test:coverage": "vitest run --coverage -c ./vitest.config.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {},
  "devDependencies": {
    "@edge-runtime/vm": "^5.0.0",
    "@testcontainers/mysql": "^11.6.0",
    "@testcontainers/postgresql": "^11.6.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "better-sqlite3": "^12.4.1",
    "convex": "^1.27.1",
    "convex-test": "^0.0.38",
    "happy-dom": "^18.0.1",
    "msw": "^2.10.5",
    "mysql2": "^3.15.0",
    "pg": "^8.16.3",
    "testcontainers": "^10.17.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@vitest/ui": "^3.2.4",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
