{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tooling/tsconfig/esm-library.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "types": ["vitest/globals", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "vitest.config.ts", "vitest.globalSetup.ts"],
  "exclude": ["dist", "node_modules", "tsup.config.ts", "tests", "**/*.test.*", "**/*.spec.*", "examples"]
}
