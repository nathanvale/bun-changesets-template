{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tooling/tsconfig/esm-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2022", "DOM", "DOM.Iterable"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "src/__tests__/**/*",
    "**/__tests__/**/*",
    "scripts/**/*",
    "tsup.config.ts"
  ]
}
