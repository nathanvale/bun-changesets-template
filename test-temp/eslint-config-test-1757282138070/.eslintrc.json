{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "max-len": [
      "error",
      {
        "code": 80
      }
    ],
    "quotes": ["error", "double"],
    "semi": ["error", "always"]
  }
}
