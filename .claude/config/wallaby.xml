<!-- Wallaby.js Configuration for Real-Time Testing -->
<wallaby-configuration>
  <file-patterns>
    <include>
      <pattern>packages/**/src/**/*.{ts,tsx,js,jsx}</pattern>
      <pattern>packages/**/*.unit.{test,spec}.{ts,tsx}</pattern>
    </include>
    
    <exclude>
      <pattern>**/*.integration.{test,spec}.{ts,tsx}</pattern>
      <pattern>**/*.e2e.{test,spec}.{ts,tsx}</pattern>
      <pattern>**/*.slow.{test,spec}.{ts,tsx}</pattern>
      <pattern>**/node_modules/**</pattern>
      <pattern>**/dist/**</pattern>
    </exclude>
  </file-patterns>
  
  <performance-settings>
    <workers initial="6" regular="2" restart="false"/>
    <delays run="300ms" reason="Reduces visual jumpiness"/>
    <run-mode>onsave</run-mode>
  </performance-settings>
  
  <visual-feedback>
    <colors>
      <low>#ffcc00</low>
      <medium>#66bb6a</medium>
      <high>#4caf50</high>
    </colors>
    <hints>
      <ignore-coverage>true</ignore-coverage>
      <show-console>true</show-console>
    </hints>
  </visual-feedback>
  
  <environment-overrides>
    <variable name="WALLABY_INCLUDE_INTEGRATION" value="false" description="Set to true to include integration tests"/>
    <variable name="VITEST_QUIET" value="true" description="Suppress console output in Wallaby"/>
  </environment-overrides>
</wallaby-configuration>