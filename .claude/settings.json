{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm lint:fix || true",
            "timeout": 10,
            "description": "Fast Turborepo lint fix with 10s timeout protection"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm format --write || true",
            "timeout": 10,
            "description": "Prettier formatting"
          }
        ]
      }
    ]
  }
}
