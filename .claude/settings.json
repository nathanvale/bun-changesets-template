{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR/packages/quality-check && QUALITY_CHECK_MODE=enforce node dist/index.js --hook --fix",
            "timeout": 10,
            "description": "Quality check enforcement",
            "continueOnError": false
          }
        ]
      }
    ]
  }
}
