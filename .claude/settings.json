{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/packages/quality-check/bin/claude-hook",
            "timeout": 10,
            "description": "Quality check enforcement for code files",
            "continueOnError": false
          }
        ]
      }
    ]
  }
}
