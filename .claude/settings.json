{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'File about to be written'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_HOOK_LOG_FILE=$HOME/.claude/quality-check.log $CLAUDE_PROJECT_DIR/packages/quality-check/bin/claude-hook",

            "timeout": 10,
            "description": "Quality check enforcement",
            "continueOnError": false
          }
        ]
      }
    ]
  }
}
