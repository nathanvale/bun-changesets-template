{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node16",
    "module": "node16",
    "types": ["node", "vitest/globals", "@testing-library/jest-dom"] // Added jest-dom types for DOM testing
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "types/**/*",
    "vitest.config.ts",
    "vitest.setup.tsx",
    "vitest.setup.node.tsx",
    "vitest.setup.dom.tsx",
    "wallaby.mjs",
    "packages/*/src/**/*.test.*",
    "packages/*/tests/**/*",
    "apps/*/src/**/*.test.*"
  ],
  "exclude": ["node_modules", "dist", "build", "coverage", ".turbo", "**/.bun/**"]
}
