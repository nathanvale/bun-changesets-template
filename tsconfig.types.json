{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist-types",
    "rootDir": "./src",
    "composite": false,
    "noEmit": false,
    "removeComments": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "dist-node",
    "dist-types",
    "build",
    "coverage",
    ".turbo",
    "**/.bun/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/test-utils.ts",
    "tests/**/*",
    "vitest.config.ts",
    "vitest.setup.tsx",
    "wallaby.mjs"
  ]
}
