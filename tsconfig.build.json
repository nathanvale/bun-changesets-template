{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Use node16 resolution for monorepo compatibility - Node.js handles Node.js compatibility
    // This avoids requiring explicit file extensions which are not needed in our Node.js + pnpm architecture
    "moduleResolution": "node16",
    "module": "node16",
    // rootDir removed for monorepo structure
    "types": ["node", "vitest/globals"] // Removed bun-types, added node types
  },
  "include": ["packages/*/src/**/*", "apps/*/src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "dist-node",
    "dist-types",
    "build",
    "coverage",
    ".turbo",
    "**/.bun/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/test-utils.ts",
    "tests/**/*",
    "vitest.config.ts",
    "vitest.setup.tsx",
    "wallaby.mjs"
  ]
  // Removed project references to avoid global composite build; Turborepo orchestrates builds
}
