{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Override to NodeNext for Node.js compatibility when building dist-node output
    // This ensures proper ESM resolution for Node.js consumers while base config uses "bundler" for Bun
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "rootDir": "./src",
    "types": ["bun-types"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "dist-node",
    "dist-types",
    "build",
    "coverage",
    ".turbo",
    "**/.bun/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/test-utils.ts",
    "tests/**/*",
    "vitest.config.ts",
    "vitest.setup.tsx",
    "wallaby.mjs"
  ]
}
