{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Bun Application",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/index.ts",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["--inspect"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    },
    {
      "name": "Debug Bun Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/test",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["test", "--inspect"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test"
      }
    }
  ]
}
