{
  "$schema": "./node_modules/turbo/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".tsbuildinfo"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "lint": {
      "outputs": [".eslintcache"],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": ["**/.tsbuildinfo"],
      "cache": true
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": [
    "tsconfig.json",
    "tooling/tsconfig/base.json",
    "tooling/tsconfig/library.json",
    ".changeset/config.json",
    "eslint.config.js",
    "vitest.config.ts",
    "turbo.json*"
  ],
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "VITEST",
    "VITEST_WORKER_ID",
    "JEST_WORKER_ID",
    "WALLABY_WORKER",
    "WALLABY_WORKER_ID",
    "ELEVENLABS_API_KEY",
    "OPENAI_API_KEY",
    "DEBUG"
  ],
  "remoteCache": {
    "enabled": true,
    "signature": false,
    "preflight": true,
    "timeout": 30,
    "uploadTimeout": 60
  }
}
