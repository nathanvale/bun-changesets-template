{
  "$schema": "./node_modules/turbo/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "dist-node/**", "dist-types/**", ".tsbuildinfo"],
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$", "!**/*.test.ts", "!**/*.spec.ts", "!tests/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$", "vitest.config.ts"],
      "env": ["NODE_ENV"]
    },
    "lint": {
      "dependsOn": ["format"],
      "outputs": [".eslintcache"],
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$", "eslint.config.js"]
    },
    "format": {
      "outputs": [".prettierrcache"],
      "cache": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".prettierrc*",
        "prettier.config.*",
        "**/.prettierrc*",
        "src/**/*.{ts,tsx,js,jsx,json,md}",
        "apps/**/*.{ts,tsx,js,jsx,json,md}",
        "packages/**/*.{ts,tsx,js,jsx,json,md}",
        "!**/node_modules/**",
        "!**/dist/**",
        "!**/coverage/**"
      ],
      "outputLogs": "new-only"
    },
    "format:check": {
      "outputs": [".prettierrcache"],
      "cache": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".prettierrc*",
        "prettier.config.*",
        "**/.prettierrc*",
        "src/**/*.{ts,tsx,js,jsx,json,md}",
        "apps/**/*.{ts,tsx,js,jsx,json,md}",
        "packages/**/*.{ts,tsx,js,jsx,json,md}",
        "!**/node_modules/**",
        "!**/dist/**",
        "!**/coverage/**"
      ],
      "outputLogs": "errors-only"
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": [],
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$", "src/**/*.{ts,tsx}"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test:dist": {
      "dependsOn": ["^build"],
      "cache": true,
      "inputs": ["dist/**", "dist-node/**", "dist-types/**"]
    }
  },
  "globalDependencies": [
    "tsconfig.json",
    "tooling/tsconfig/base.json",
    "tooling/tsconfig/library.json",
    ".changeset/config.json",
    "eslint.config.js",
    "vitest.config.ts",
    ".prettierrc*",
    "prettier.config.*",
    "turbo.json*",
    ".env*"
  ],
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "VITEST",
    "VITEST_WORKER_ID",
    "JEST_WORKER_ID",
    "WALLABY_WORKER",
    "WALLABY_WORKER_ID",
    "ELEVENLABS_API_KEY",
    "OPENAI_API_KEY",
    "DEBUG"
  ],
  "remoteCache": {
    "enabled": true,
    "signature": true,
    "preflight": true,
    "timeout": 30
  },
  "localCache": {
    "enabled": true,
    "directory": ".turbo/cache",
    "compression": "gzip",
    "maxSize": "5GB",
    "evictionPolicy": "lru",
    "retentionDays": 30
  },
  "parallelism": "auto"
}
