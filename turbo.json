{
  "$schema": "./node_modules/turbo/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "dist-node/**", "dist-types/**", ".tsbuildinfo"],
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$", "!**/*.test.ts", "!**/*.spec.ts", "!tests/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$", "vitest.config.ts"],
      "env": ["NODE_ENV"]
    },
    "lint": {
      "outputs": [".eslintcache"],
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$", "eslint.config.js"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": [],
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$", "src/**/*.{ts,tsx}"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test:dist": {
      "dependsOn": ["^build"],
      "cache": true,
      "inputs": ["dist/**", "dist-node/**", "dist-types/**"]
    }
  },
  "globalDependencies": [
    "tsconfig.json",
    "tooling/tsconfig/base.json",
    "tooling/tsconfig/library.json",
    ".changeset/config.json",
    "eslint.config.js",
    "vitest.config.ts",
    "turbo.json*",
    ".env*"
  ],
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "VITEST",
    "VITEST_WORKER_ID",
    "JEST_WORKER_ID",
    "WALLABY_WORKER",
    "WALLABY_WORKER_ID",
    "ELEVENLABS_API_KEY",
    "OPENAI_API_KEY",
    "DEBUG"
  ],
  "remoteCache": {
    "enabled": true,
    "signature": false,
    "preflight": true,
    "timeout": 30
  }
}
