{
  "name": "@bun-template/server",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/nathanvale/bun-changesets-template.git",
    "directory": "apps/server"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist coverage",
