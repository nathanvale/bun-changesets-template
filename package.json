{
  "name": "my-bun-project",
  "version": "0.1.0",
  "private": true,
  "description": "New project scaffolded with Bun + Changesets + Commitizen template",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "build:analyze": "bun build src/index.ts --outdir=dist --analyze",
    "build:watch": "bun build src/index.ts --outdir=dist --watch",
    "bundle:size": "bunx size-limit",
    "commit": "git-cz",
    "cz": "git-cz",
    "dev": "bun --watch src/index.ts",
    "dev:debug": "bun --inspect src/index.ts",
    "dev:hot": "bun --hot src/index.ts",
    "dev:smol": "bun --smol --watch src/index.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:check": "eslint . --cache --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "perf:build": "hyperfine --warmup 1 'bun run build'",
    "perf:startup": "hyperfine --warmup 3 'bun run src/index.ts'",
    "prepare": "husky",
    "release": "bunx changeset",
    "release:publish": "bunx changeset publish",
    "release:version": "bunx changeset version",
    "start": "bun dist/index.js",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "validate": "bun run lint:check && bun run format:check && bun run typecheck && bun run test"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-git"
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "9.34.0",
    "@types/bun": "1.2.20",
    "@types/node": "24.3.0",
    "bun-types": "1.2.21",
    "commitizen": "^4.3.1",
    "commitlint": "^19.8.1",
    "cz-git": "^1.12.0",
    "depcheck": "1.4.7",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-unicorn": "60.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "npm-check-updates": "18.0.2",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "4.2.0",
    "prettier-plugin-packagejson": "2.5.19",
    "size-limit": "11.2.0",
    "typedoc": "0.28.11",
    "typescript": "^5.7.3",
    "typescript-eslint": "8.41.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
