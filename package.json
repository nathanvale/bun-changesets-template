{
  "name": "node-pnpm-changesets-template",
  "version": "0.1.0",
  "private": true,
  "description": "Node.js + pnpm monorepo template with Next.js, Turborepo, Vitest, Changesets & ADHD-optimized DX",
  "homepage": "https://github.com/nathanvale/bun-changesets-template#readme",
  "bugs": {
    "url": "https://github.com/nathanvale/bun-changesets-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nathanvale/bun-changesets-template.git"
  },
  "sideEffects": false,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:all": "turbo run build --continue=dependencies-successful",
    "build:libs": "turbo run build --filter=./packages/*",
    "bundle:size": "pnpx size-limit",
    "check": "pnpm run validate",
    "check:circular-deps": "tsx scripts/check-circular-deps.ts",
    "clean:build": "rm -rf dist dist-node dist-types",
    "commit": "git-cz",
    "cz": "git-cz",
    "dev": "turbo run dev --parallel",
    "dev:server": "turbo run dev --filter=@template/server",
    "dev:test": "vitest watch --reporter=dot",
    "dev:turbo": "turbo run dev --experimental-write-cache",
    "docker:prune": "./scripts/docker-prune.sh",
    "dx:status": "tsx scripts/dx-status.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "governance": "tsx scripts/governance-check.ts",
    "governance:verbose": "tsx scripts/governance-check.ts --verbose",
    "lint": "turbo run lint",
    "lint:check": "turbo run lint --continue=dependencies-successful",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "prepublish:guard": "tsx scripts/prepublish-guard.ts",
    "prepublishOnly": "pnpm run prepublish:guard && pnpm run build:all && pnpm run validate:types && pnpm run test:ci",
    "record:baselines": "tsx scripts/record-baselines.ts",
    "release": "changeset version && pnpm install --no-frozen-lockfile && turbo run build && changeset publish",
    "release:publish": "changeset publish",
    "release:version": "changeset version",
    "security:audit": "pnpm audit || true",
    "security:check": "pnpm run security:audit",
    "security:fix": "pnpm audit --fix",
    "security:sbom": "pnpx @cyclonedx/cdxgen -o sbom.json -t js .",
    "server": "cd apps/server && pnpm dev",
    "server:start": "cd apps/server && pnpm start",
    "test": "vitest run",
    "test:changed": "vitest --changed --run",
    "test:ci": "vitest run --coverage --bail 1",
    "test:ci:node": "node ./node_modules/.bin/vitest run --coverage",
    "test:coverage": "vitest run --coverage",
    "test:coverage:merge": "tsx scripts/merge-coverage.ts",
    "test:coverage:open": "vitest run --coverage && open coverage/index.html",
    "test:coverage:ratchet": "tsx scripts/coverage-ratchet.ts",
    "test:coverage:watch": "vitest watch --coverage",
    "test:debug": "vitest run --reporter=verbose --no-coverage",
    "test:packages": "vitest run --project packages",
    "test:server": "vitest run --project server",
    "test:ui": "vitest ui",
    "test:watch": "vitest watch",
    "test:web": "vitest run --project app --project web",
    "typecheck": "turbo run typecheck",
    "typecheck:watch": "tsc --noEmit -p tsconfig.build.json --watch",
    "validate": "pnpm run lint:check && pnpm run format:check && pnpm run typecheck && pnpm run validate:types && pnpm run test:ci",
    "validate:types": "pnpm run build:all && tsx scripts/validate-types.ts"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-git"
    }
  },
  "dependencies": {
    "@template/utils": "workspace:*",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "9.34.0",
    "@rollup/rollup-darwin-arm64": "4.48.1",
    "@rollup/rollup-linux-x64-gnu": "4.48.1",
    "@rollup/wasm-node": "4.49.0",
    "@size-limit/preset-app": "11.2.0",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "24.3.0",
    "@types/react": "19.1.11",
    "@types/react-dom": "19.1.8",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "commitizen": "^4.3.1",
    "commitlint": "^19.8.1",
    "cz-git": "^1.12.0",
    "depcheck": "1.4.7",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-unicorn": "60.0.0",
    "eslint-plugin-vitest": "0.5.4",
    "happy-dom": "18.0.1",
    "husky": "^9.1.7",
    "json5": "2.2.3",
    "lint-staged": "^16.1.5",
    "msw": "2.10.5",
    "npm-check-updates": "18.0.2",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "4.2.0",
    "prettier-plugin-packagejson": "2.5.19",
    "rollup": "4.24.0",
    "size-limit": "11.2.0",
    "tsup": "^8.3.0",
    "tsx": "^4.19.2",
    "turbo": "2.5.6",
    "typedoc": "0.28.11",
    "typescript": "^5.7.3",
    "typescript-eslint": "8.41.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "_suppressions": {
    "warnings": {
      "lint": "NODE_NO_WARNINGS=1 and NODE_OPTIONS=--no-warnings applied to lint & format scripts to hide non-actionable Experimental JSON import warnings during migration. Remove once Node drops the warning or if actionable.",
      "typesExport": "Suppress string export warning for './package.json' in scripts/validate-types.ts (industry standard, no types needed). Other string exports still warn to encourage explicit typed objects."
    },
    "tests": {
      "perfGuards": "RUN_TURBO_PERF env var gates heavy Turborepo cache performance tests instead of test.skip to avoid disabled-test noise.",
      "noSkipPattern": "Converted previously skipped async tests to early-return synchronous tests to satisfy require-await & no-disabled-tests rules."
    },
    "stability": {
      "singleThreadVitest": "Vitest configured with pool.threads.singleThread=true to avoid worker termination issues in complex monorepo setups. Can be reconsidered for parallel execution when needed.",
      "mswShutdownDelay": "afterAll introduces a short timeout to allow pending MSW requests to settle, preventing lingering handles and hangs."
    },
    "review": {
      "cycle": "Review suppressions quarterly or before a release: drop any suppression whose root cause is resolved upstream.",
      "contact": "Ownership: update CODEOWNERS if suppression categories expand beyond tooling team."
    }
  }
}
