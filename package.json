{
  "name": "node-pnpm-changesets-template",
  "version": "0.1.0",
  "private": true,
  "description": "Node.js + pnpm monorepo template with Next.js, Turborepo, Vitest, Changesets & ADHD-optimized DX",
  "homepage": "https://github.com/nathanvale/bun-changesets-template#readme",
  "bugs": {
    "url": "https://github.com/nathanvale/bun-changesets-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nathanvale/bun-changesets-template.git"
  },
  "sideEffects": false,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:all": "turbo run build --continue=dependencies-successful",
    "changeset": "changeset",
    "clean": "turbo run clean",
    "commit": "git-cz",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "turbo run lint --continue=dependencies-successful",
    "lint:fix": "turbo run lint:fix --continue=dependencies-successful",
    "prepare": "husky",
    "release": "pnpm build:all && changeset publish",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "typecheck": "turbo run typecheck",
    "validate": "pnpm lint && pnpm format:check && pnpm typecheck && pnpm test",
    "version-packages": "changeset version"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-git"
    }
  },
  "dependencies": {
    "@template/utils": "workspace:*",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "24.3.0",
    "@types/react": "19.1.11",
    "@types/react-dom": "19.1.8",
    "@vitest/coverage-v8": "3.2.4",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.17.0",
    "@eslint/js": "9.34.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-react": "^7.38.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-turbo": "^2.5.6",
    "eslint-plugin-unicorn": "60.0.0",
    "eslint-plugin-vitest": "0.5.4",
    "typescript-eslint": "8.41.0",
    "happy-dom": "18.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "msw": "2.10.5",
    "prettier": "^3.4.2",
    "tsup": "^8.3.0",
    "turbo": "2.5.6",
    "typescript": "^5.7.3",
    "vitest": "3.2.4"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
