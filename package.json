{
  "name": "my-bun-project",
  "version": "0.1.0",
  "private": true,
  "description": "Bun-first TypeScript template with Changesets, Commitizen, Vitest (explicitly, not Bun test), MSW, strict lint & ADHD-optimized DX",
  "homepage": "https://github.com/nathanvale/bun-changesets-template#readme",
  "bugs": {
    "url": "https://github.com/nathanvale/bun-changesets-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nathanvale/bun-changesets-template.git"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "bun": "./dist/index.js",
      "import": "./dist-node/index.js",
      "types": "./dist-types/index.d.ts"
    }
  },
  "main": "dist-node/index.js",
  "types": "dist-types/index.d.ts",
  "files": [
    "dist/",
    "dist-node/",
    "dist-types/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "build:all": "bun run build:node && bun run build:types && bun run build",
    "build:analyze": "bun build src/index.ts --outdir=dist --target=bun --analyze",
    "build:node": "tsc -p tsconfig.build.json --outDir dist-node",
    "build:types": "tsc -p tsconfig.types.json",
    "build:watch": "bun build src/index.ts --outdir=dist --target=bun --watch",
    "bundle:size": "bunx size-limit",
    "check": "bun run validate",
    "commit": "git-cz",
    "cz": "git-cz",
    "dev": "bun --watch src/index.ts",
    "dev:debug": "bun --inspect src/index.ts",
    "dev:hot": "bun --hot src/index.ts",
    "dev:smol": "bun --smol --watch src/index.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:check": "eslint . --cache --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "perf:build": "hyperfine --warmup 1 'bun run build'",
    "perf:build:markdown": "hyperfine --warmup 1 'bun run build' --export-markdown perf-build.md",
    "perf:startup": "hyperfine --warmup 3 'bun run src/index.ts'",
    "perf:startup:markdown": "hyperfine --warmup 3 'bun run src/index.ts' --export-markdown perf-startup.md",
    "prepare": "husky",
    "prepublishOnly": "bun run build:all && bun run test:ci",
    "release": "bunx changeset",
    "release:publish": "bunx changeset publish",
    "release:version": "bunx changeset version",
    "security:audit": "bun audit || true",
    "security:check": "bun run security:audit",
    "security:fix": "bun audit fix",
    "security:sbom": "bunx @cyclonedx/cdxgen -o sbom.json -t js .",
    "start": "bun dist/index.js",
    "test": "vitest",
    "test:changed": "vitest --changed --run",
    "test:ci": "vitest run --coverage --reporter=dot --reporter=junit",
    "test:coverage": "vitest run --coverage",
    "test:coverage:open": "vitest run --coverage && open coverage/index.html",
    "test:coverage:watch": "vitest watch --coverage",
    "test:debug": "vitest run --reporter=verbose --no-coverage --run",
    "test:ui": "vitest ui",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit -p tsconfig.build.json",
    "typecheck:watch": "tsc --noEmit -p tsconfig.build.json --watch",
    "validate": "bun run lint:check && bun run format:check && bun run typecheck && bun run validate:types && bun run test:ci",
    "validate:types": "bun run build:types && bun scripts/validate-types.ts"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-git"
    }
  },
  "dependencies": {
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "9.34.0",
    "@size-limit/preset-app": "11.2.0",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/bun": "1.2.20",
    "@types/node": "24.3.0",
    "@types/react": "19.1.11",
    "@types/react-dom": "19.1.8",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "bun-types": "1.2.21",
    "commitizen": "^4.3.1",
    "commitlint": "^19.8.1",
    "cz-git": "^1.12.0",
    "depcheck": "1.4.7",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-unicorn": "60.0.0",
    "eslint-plugin-vitest": "0.5.4",
    "happy-dom": "18.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "msw": "2.10.5",
    "npm-check-updates": "18.0.2",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "4.2.0",
    "prettier-plugin-packagejson": "2.5.19",
    "rollup": "4.48.1",
    "size-limit": "11.2.0",
    "typedoc": "0.28.11",
    "typescript": "^5.7.3",
    "typescript-eslint": "8.41.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "engines": {
    "bun": ">=1.1.38"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
