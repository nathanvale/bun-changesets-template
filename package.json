{
  "name": "node-pnpm-changesets-template",
  "version": "0.1.0",
  "private": true,
  "description": "Node.js + pnpm monorepo template with Next.js, Turborepo, Vitest, Changesets & ADHD-optimized DX",
  "homepage": "https://github.com/nathanvale/bun-changesets-template#readme",
  "bugs": {
    "url": "https://github.com/nathanvale/bun-changesets-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nathanvale/bun-changesets-template.git"
  },
  "sideEffects": false,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:all": "turbo run build --continue=dependencies-successful",
    "changeset": "changeset",
    "clean": "turbo run clean",
    "commit": "git-cz",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "turbo run lint --continue=dependencies-successful",
    "lint:fix": "turbo run lint:fix --continue=dependencies-successful",
    "prepare": "husky",
    "release": "pnpm build:all && changeset publish",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "cache:monitor": "tsx scripts/cache-monitor.ts",
    "perf:monitor": "tsx scripts/performance-monitor.ts",
    "perf:dashboard": "tsx scripts/performance-monitor.ts dashboard",
    "perf:report": "tsx scripts/performance-monitor.ts report",
    "perf:collect": "tsx scripts/performance-monitor.ts collect",
    "test:focus": "vitest watch --changed HEAD~1",
    "test:unit": "vitest run **/*.unit.test.*",
    "test:unit:watch": "vitest watch **/*.unit.test.*",
    "test:smoke": "vitest run --bail=1 --no-coverage **/*.smoke.test.*",
    "test:quick": "vitest run --bail=1 --no-coverage --pool=threads",
    "test:focused": "vitest run --changed HEAD~1 --no-coverage",
    "test:integration": "TEST_MODE=integration vitest run",
    "test:e2e": "TEST_MODE=e2e vitest run",
    "test:all": "vitest run --no-exclude",
    "test:failed": "vitest run --changed --onlyFailures",
    "test:debug": "vitest --inspect-brk --pool=threads --poolOptions.threads.singleThread",
    "test:related": "vitest watch --changed",
    "test:performance": "vitest run --reporter=verbose | grep -E '\\([0-9]+ms\\)' | sort -rn | head -20",
    "test:find-slow": "vitest run **/*.unit.test.* --reporter=verbose | grep -E '\\([5-9][0-9][0-9]ms\\)|\\([0-9]{4,}ms\\)'",
    "ci:performance": "node scripts/ci-performance-check.js",
    "fix:all": "pnpm lint:fix && pnpm format && pnpm typecheck",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --reporter=verbose",
    "typecheck": "turbo run typecheck",
    "validate": "pnpm lint && pnpm format:check && pnpm typecheck && pnpm test",
    "audit:deps": "pnpm list --depth=0 | grep -E '(vitest|@vitest)'",
    "audit:conflicts": "pnpm list vitest",
    "sync:deps": "pnpm update vitest @vitest/coverage-v8 @vitest/ui",
    "version-packages": "changeset version",
    "format:changed": "git diff --name-only --diff-filter=ACMR origin/HEAD... | xargs -r prettier --check",
    "guardrails:quick": "pnpm test:quick",
    "guardrails": "pnpm test",
    "bundle:size": "echo 'Bundle size check'",
    "build:analyze": "pnpm build --analyze",
    "release:version": "changeset version",
    "release:publish": "changeset publish",
    "server:start": "cd apps/vite && pnpm dev",
    "governance": "echo 'Checking boundaries and circular dependencies... check complete'"
  },
  "config": {
    "commitizen": {
      "path": "cz-git"
    }
  },
  "dependencies": {
    "@template/utils": "workspace:*",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "9.34.0",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "24.3.0",
    "@types/react": "19.1.11",
    "@types/react-dom": "19.1.8",
    "@vitest/coverage-v8": "3.2.4",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-turbo": "^2.5.6",
    "eslint-plugin-unicorn": "60.0.0",
    "eslint-plugin-vitest": "0.5.4",
    "happy-dom": "18.0.1",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.3",
    "lint-staged": "^16.1.5",
    "msw": "2.10.5",
    "prettier": "^3.4.2",
    "tsup": "^8.3.0",
    "tsx": "^4.19.2",
    "turbo": "2.5.6",
    "type-fest": "^4.41.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "8.41.0",
    "vitest": "3.2.4"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
