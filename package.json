{
  "name": "my-bun-project",
  "version": "0.1.0",
  "private": true,
  "description": "Bun-first TypeScript template with Changesets, Commitizen, Vitest (explicitly, not Bun test), MSW, strict lint & ADHD-optimized DX",
  "homepage": "https://github.com/nathanvale/bun-changesets-template#readme",
  "bugs": {
    "url": "https://github.com/nathanvale/bun-changesets-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nathanvale/bun-changesets-template.git"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist-types/index.d.ts",
      "bun": "./dist/index.js",
      "import": "./dist-node/index.js",
      "require": "./dist-node/index.js",
      "default": "./dist-node/index.js"
    },
    "./number-utils": {
      "types": "./dist-types/number-utils.d.ts",
      "bun": "./dist/number-utils.js",
      "import": "./dist-node/number-utils.js",
      "require": "./dist-node/number-utils.js",
      "default": "./dist-node/number-utils.js"
    },
    "./path-utils": {
      "types": "./dist-types/path-utils.d.ts",
      "bun": "./dist/path-utils.js",
      "import": "./dist-node/path-utils.js",
      "require": "./dist-node/path-utils.js",
      "default": "./dist-node/path-utils.js"
    },
    "./package.json": "./package.json"
  },
  "main": "dist-node/index.js",
  "types": "./dist-types/index.d.ts",
  "typesVersions": {
    ">=5.0": {
      "*": [
        "dist-types/*"
      ]
    },
    ">=4.0": {
      "*": [
        "dist-types/*"
      ]
    }
  },
  "files": [
    "dist/",
    "dist-node/",
    "dist-types/",
    "README.md",
    "LICENSE"
  ],
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "bun run clean:build && bun run build:code && bun run build:node && bun run build:types",
    "build:all": "turbo run build --continue=dependencies-successful",
    "build:code": "bun build src/index.ts --outdir=dist --target=bun --format=esm --external react --external react-dom --sourcemap=linked",
    "build:libs": "turbo run build --filter=./packages/*",
    "build:node": "tsc -p tsconfig.build.json --outDir dist-node",
    "build:prod": "bun run clean:build && bun build src/index.ts --outdir=dist --target=bun --format=esm --external react --external react-dom --minify --production --sourcemap=linked && bun run build:node && bun run build:types",
    "build:types": "tsc -p tsconfig.types.json",
    "build:watch": "bun build src/index.ts --outdir=dist --target=bun --watch",
    "bundle:size": "bunx size-limit",
    "check": "bun run validate",
    "check:circular-deps": "bun scripts/check-circular-deps.ts",
    "clean:build": "rm -rf dist dist-node dist-types",
    "commit": "git-cz",
    "cz": "git-cz",
    "dev": "bun --watch src/index.ts",
    "dev:debug": "bun --inspect src/index.ts",
    "dev:hot": "bun --hot src/index.ts",
    "dev:server": "turbo run dev --filter=@bun-template/server",
    "dev:smol": "bun --smol --watch src/index.ts",
    "dev:test": "vitest watch --reporter=dot",
    "dev:turbo": "turbo run dev --experimental-write-cache",
    "diag:test": "BUN_TEMPLATE_ESBUILD_DIAG=1 vitest run --reporter=dot || (echo '\n[diag] toolchain anomaly detected (exit $?); see stderr above' && exit 1)",
    "docker:prune": "./scripts/docker-prune.sh",
    "format": "NODE_NO_WARNINGS=1 NODE_OPTIONS=--no-warnings prettier --write .",
    "format:check": "NODE_NO_WARNINGS=1 NODE_OPTIONS=--no-warnings prettier --check .",
    "governance": "bun scripts/governance-check.ts",
    "governance:verbose": "bun scripts/governance-check.ts --verbose",
    "lint": "NODE_NO_WARNINGS=1 eslint .",
    "lint:check": "turbo run lint --continue=dependencies-successful",
    "lint:fix": "NODE_NO_WARNINGS=1 eslint . --fix",
    "perf:build": "hyperfine --warmup 1 'bun run build'",
    "perf:build:markdown": "hyperfine --warmup 1 'bun run build' --export-markdown perf-build.md",
    "perf:startup": "hyperfine --warmup 3 'bun run src/index.ts'",
    "perf:startup:markdown": "hyperfine --warmup 3 'bun run src/index.ts' --export-markdown perf-startup.md",
    "prepare": "husky",
    "prepublish:guard": "bun scripts/prepublish-guard.ts",
    "prepublishOnly": "bun run prepublish:guard && bun run build:all && bun run validate:types && bun run test:ci",
    "record:baselines": "bun scripts/record-baselines.ts",
    "release": "bunx changeset",
    "release:publish": "bunx changeset publish",
    "release:version": "bunx changeset version",
    "security:audit": "bun audit || true",
    "security:check": "bun run security:audit",
    "security:fix": "bun audit fix",
    "security:sbom": "bunx @cyclonedx/cdxgen -o sbom.json -t js .",
    "server": "cd apps/server && bun dev",
    "server:hot": "cd apps/server && bun --hot src/index.ts",
    "server:start": "cd apps/server && bun start",
    "start": "bun dist/index.js",
    "test": "vitest",
    "test:changed": "vitest --changed --run",
    "test:ci": "turbo run test --continue=dependencies-successful",
    "test:ci:node": "node ./node_modules/.bin/vitest run --coverage",
    "test:coverage": "vitest run --coverage",
    "test:coverage:open": "vitest run --coverage && open coverage/index.html",
    "test:coverage:watch": "vitest watch --coverage",
    "test:debug": "vitest run --reporter=verbose --no-coverage --run",
    "test:node": "node ./node_modules/.bin/vitest run",
    "test:ui": "vitest ui",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit -p tsconfig.build.json",
    "typecheck:watch": "tsc --noEmit -p tsconfig.build.json --watch",
    "validate": "bun run lint:check && bun run format:check && bun run typecheck && bun run validate:types && bun run test:ci",
    "validate:types": "bun run build:all && bun scripts/validate-types.ts"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "package.json": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-git"
    }
  },
  "dependencies": {
    "@bun-template/utils": "workspace:*",
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "9.34.0",
    "@rollup/rollup-darwin-arm64": "4.48.1",
    "@rollup/rollup-linux-x64-gnu": "4.48.1",
    "@rollup/wasm-node": "4.49.0",
    "@size-limit/preset-app": "11.2.0",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/bun": "1.2.20",
    "@types/node": "24.3.0",
    "@types/react": "19.1.11",
    "@types/react-dom": "19.1.8",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "bun-types": "1.2.21",
    "commitizen": "^4.3.1",
    "commitlint": "^19.8.1",
    "cz-git": "^1.12.0",
    "depcheck": "1.4.7",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-unicorn": "60.0.0",
    "eslint-plugin-vitest": "0.5.4",
    "happy-dom": "18.0.1",
    "husky": "^9.1.7",
    "json5": "2.2.3",
    "lint-staged": "^16.1.5",
    "msw": "2.10.5",
    "npm-check-updates": "18.0.2",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "4.2.0",
    "prettier-plugin-packagejson": "2.5.19",
    "rollup": "4.24.0",
    "size-limit": "11.2.0",
    "turbo": "2.5.6",
    "typedoc": "0.28.11",
    "typescript": "^5.7.3",
    "typescript-eslint": "8.41.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "packageManager": "bun@1.1.38",
  "engines": {
    "bun": ">=1.1.38"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "_suppressions": {
    "warnings": {
      "lint": "NODE_NO_WARNINGS=1 and NODE_OPTIONS=--no-warnings applied to lint & format scripts to hide non-actionable Experimental JSON import warnings during migration. Remove once Node drops the warning or if actionable.",
      "typesExport": "Suppress string export warning for './package.json' in scripts/validate-types.ts (industry standard, no types needed). Other string exports still warn to encourage explicit typed objects."
    },
    "tests": {
      "perfGuards": "RUN_TURBO_PERF env var gates heavy Turborepo cache performance tests instead of test.skip to avoid disabled-test noise.",
      "noSkipPattern": "Converted previously skipped async tests to early-return synchronous tests to satisfy require-await & no-disabled-tests rules."
    },
    "stability": {
      "singleThreadVitest": "Vitest configured with pool.threads.singleThread=true to avoid Bun/Vitest worker termination issue (see Bun issue #14949). Revisit after upstream fix.",
      "mswShutdownDelay": "afterAll introduces a short timeout to allow pending MSW requests to settle, preventing lingering handles and hangs."
    },
    "review": {
      "cycle": "Review suppressions quarterly or before a release: drop any suppression whose root cause is resolved upstream.",
      "contact": "Ownership: update CODEOWNERS if suppression categories expand beyond tooling team."
    }
  }
}
