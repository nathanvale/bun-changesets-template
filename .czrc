{
  "$schema": "https://unpkg.com/cz-git/__schema__/cz-git.json",
  "types": [
    { "value": "feat", "name": "feat:     A new feature" },
    { "value": "fix", "name": "fix:      A bug fix" },
    { "value": "docs", "name": "docs:     Documentation only changes" },
    { "value": "style", "name": "style:    Formatting only" },
    { "value": "refactor", "name": "refactor: Code refactor with no behavior change" },
    { "value": "perf", "name": "perf:     Performance improvement" },
    { "value": "test", "name": "test:     Add or correct tests" },
    { "value": "build", "name": "build:    Build system or dependencies" },
    { "value": "ci", "name": "ci:       CI configuration / scripts" },
    { "value": "chore", "name": "chore:    Other changes" },
    { "value": "revert", "name": "revert:   Revert a previous commit" }
  ],
  "scopes": ["api", "ui", "infra", "db", "deps", "tests"],
  "useEmoji": false,
  "subjectLimit": 72
}
